        {
            "name": "Debug tests single run",
            "type": "node",
            "request": "launch",
            "env": { "CI": "true" },
            "runtimeExecutable": "/node_modules/.bin/mocha",
            "args": ["test", "--runInBand", "--no-cache"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
            }
    ]
